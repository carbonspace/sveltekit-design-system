{
	"name": "design-system",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"css-build": "sass src/scss/main.scss src/css/style.css",
		"css-watch": "sass --watch src/scss/main.scss:src/css/style.css",
		"start": "yarn run css-watch"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^5.0.8",
		"@fontsource/material-icons-sharp": "^5.0.7",
		"@fontsource/montserrat": "^5.0.8",
		"@fontsource/open-sans": "^5.0.12",
		"@fortawesome/fontawesome-svg-core": "^6.4.2",
		"@fortawesome/free-solid-svg-icons": "^6.4.2",
		"@mdi/font": "^7.2.96",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.38.1",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.25.1",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"bulma": "^0.9.4",
		"bulmaswatch": "^0.8.1",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"fontawesome-svelte": "^2.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.68.1",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"svelte-fa": "^3.0.4",
		"svelte-prism": "^1.1.6",
		"svelte-tooltip": "^1.2.0",
		"svelte-typeahead": "^4.4.1",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vitest": "^0.34.5"	
	},
	"type": "module"
}
